<div class="container-fluid">
  <% @posts.each do |post| %>
    <div class="row">
      <div class="col-sm-12 post-section">
        <h1 class="post-title"><%= link_to post.title, post %></h1>
        <div class="post-labels">
          <p><span class="post-label">Created on:</span>
            <%= post.created_at.strftime("%v") %>
          </p>
          <p><span class="post-label">Created by:</span>
            <%= post.user.email %>
          </p>
        </div>
        <p class="post-body">
          <%= raw post.body.truncate(50) %>
          <%= link_to 'Read more', post %>
        </p>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-12">
      <%= paginate @posts %>
      <%= page_entries_info @posts %>
    </div>
  </div>
</div>
